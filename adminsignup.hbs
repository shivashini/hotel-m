    <h2 class="text-center" style="padding: 20px;">Admin Signup</h2>

    {{!-- LOGIN FORM --}}
    <form action="/adminsignup1" method="post">
      <div class="form-group">
        <label>First Name</label>
        <input type="text" class="form-control" name="firstname" id="firstname">
        <p class="validate" id="firstname-validate" style="display:none;">Please enter your first name.</p>
      </div>
      <div class="form-group">
        <label>Last Name</label>
        <input type="text" class="form-control" name="lastname" id="lastname">
        <p class="validate" id="lastname-validate" style="display:none;">Please enter your last name.</p>
      </div>
      <div class="form-group">
        <label>Email</label>
        <input pattern="[a-zA-Z0-9.-_]{1,}@[a-zA-Z.-]{2,}[.]{1}[a-zA-Z]{2,}" type="email" class="form-control" name="email" id="email" required>
        <p class="validate" id="email-validate" style="display:none;">Please enter your email.</p>
      </div>
      <div class="form-group">
        <label>Password</label>
        <input type="password" class="form-control" name="password" id="password">
        <p class="validate" id="password-validate" style="display:none;">Please enter your password.</p>
      </div>
      <button type="submit" class="btn btn-default" >Signup</button>
    </form>
    <br>
    <label>Already have an account? </label>
    <a href="/loginadmin"><button type="signup" class="btn btn-default">Login</button></a>
  </div>
</div>

